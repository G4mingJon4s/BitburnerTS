{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "node",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"jsx": "react",
		"strict": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"outDir": "dist",
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}